swiper image{
	width: 100%;
	height: 200px;
  }
  swiper{
	height: 200px;
  }

.tab{
	display: flex;
	justify-content: space-between;
	background-color: #ffffff;
}
.tab view{
	width: 375rpx;
	text-align: center;
}
.active{
	border-bottom: 3rpx solid red;
}
.user{
	overflow: hidden;
	padding:20rpx;
  }
  .user image{
	width: 100rpx;
	border-radius: 50%;
  }
  
  .user .left{
	float:left;
	height: 100rpx;
	line-height: 100rpx;
  }
  .user .right{
	float:right;
	height: 100rpx;
	line-height: 100rpx;
  
  }
  
  .content{
	padding:20rpx;
  }
  
  .content image{
	width: 200rpx;
  }
  
  .bottom{
	height: 100rpx;
	line-height: 100rpx;
	text-align: center;
	position: fixed;
	bottom: 0;
	left:0;
	width: 100%;
	background-color: white;
	display: flex;
  }
  
  .bottom view{
	flex:1;
	color:white;
  }